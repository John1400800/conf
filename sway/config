set {
    $bg #1c1c1ce5
    $red #fb4934
    $green #b8bb26
    $yellow #fabd2f
    $blue #83a598
    $purple #d3869b
    $aqua #8ec07c
    $gray #a89984
    $darkgray #3c3836
    $lightgray #ebdbb2
    $font IosevkaNerdFont 10
    $mod Mod4
    $left h
    $down j
    $up k
    $right l
    $nag         exec swaynagmode
    $nag_exit    $nag --exit
    $nag_confirm $nag --confirm
    $nag_select  $nag --select
    $menu wmenu-run -b -f "$font" -N "$bg" -n "$lightgray" -S "$lightgray" -s "$bg" -i # -l 10
    # $menu fuzzel
    $term footclient
    $browser firefox
}

