input type:touchpad {
    # dwt disable
    tap enabled
    natural_scroll enabled
    drag_lock disabled
}

input type:keyboard {
    xkb_layout  "us,ru"
    xkb_options "grp:alt_shift_toggle"
}

floating_modifier $mod normal

bindsym $mod+r mode "resize"
mode "resize" {
    bindsym --to-code {
        $left resize shrink width 25px
            $down resize grow height  25px
            $up resize shrink height  25px
            $right resize grow width  25px
            $mod+r mode "default"
            Escape mode "default"
    }
}

bindsym --to-code $mod+Shift+e $nag -t "warning" -m "Exit Sway?" -b "Exit" "swaymsg exit" -b "Reload" "swaymsg reload"
mode "nag" {
  bindsym --to-code {
    Ctrl+d    mode "default"
    Ctrl+c    $nag_exit
    q         $nag_exit
    Escape    $nag_exit
    Return    $nag_confirm
    Tab       $nag_select prev
    Shift+Tab $nag_select next
    Left      $nag_select next
    Right     $nag_select prev
    Up        $nag_select next
    Down      $nag_select prev
  }
}

# class                 border     backgr     text     indicator child_border
client.focused          $lightgray $bg        $lightgray $green  $lightgray
client.focused_inactive $lightgray $darkgray  $lightgray $green  $darkgray
client.unfocused        $lightgray $darkgray  $lightgray $green  $darkgray
client.urgent           $red       $red       $bg        $red    $red
client.placeholder      $lightgray $lightgray $lightgray $lightgray $lightgray

bar {
    position bottom
    gaps 0px 6px
    status_command i3status

    colors {
        # bar background color
        background $bg
        # text color used for blocks that do not have a color specified.
        statusline $lightgray
        # workspaces section
    	separator  $lightgray
        #                    border  backgr. text
        focused_workspace    $lightgray $lightgray $bg
        inactive_workspace   $darkgray $darkgray $lightgray
        active_workspace     $darkgray $darkgray $lightgray
        urgent_workspace     $red $red $bg
    }
}

font pango:$font
gaps inner 6
default_border pixel 2
for_window [class="Firefox"] floating enable, resize set 1024 1024

include /home/john/.config/sway/common_bindings.conf
include /etc/sway/config.d/*

exec --no-startup-id dbus-update-activation-environment --all --systemd
