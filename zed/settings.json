// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // "inline_completions": {
  //   "disabled_globs": [".env", "test.cpp"]
  // },
  // "inline_completions": {
  // "disabled_globs": [".env", ""]
  // },
  "assistant": {
    "default_model": {
      "provider": "google",
      "model": "gemini-2.0-flash-exp"
    },
    "version": "2"
  },
  "features": {
    "inline_completion_provider": "supermaven"
  },
  "soft_wrap": "editor_width",
  "show_inline_completions": true,
  "base_keymap": "VSCode",
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "buffer_line_height": "standard",
  "languages": {
    "JSONC": {
      "show_inline_completions": true
    },
    "Lua": {
      "show_inline_completions": true
    },
    "C++": {
      "show_inline_completions": true,
      "tab_size": 2
    },
    "C": {
      "show_inline_completions": true
    },
    "LaTeX": {
      "show_inline_completions": true,
      "tab_size": 2
    },
    "HTML": {
      "show_inline_completions": true,
      "tab_size": 2
    },
    "CSS": {
      "tab_size": 2
    }
  },
  "auto_signature_help": true,
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_background": true,
    "show_other_hints": true
  },
  "current_line_highlight": "none",
  // "gutter": {
  //   "folds": false,
  //   "code_actions": false,
  //   "runnables": false
  // },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "cursor_blink": false,
  "vim_mode": true,
  "relative_line_numbers": true,
  "ui_font_size": 16,
  "ui_font_weight": 501,
  "buffer_font_family": "Iosevka",
  "buffer_font_weight": 601,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "Pink Light",
    "dark": "Pink Light"
  },
  "terminal": {
    "font_weight": 601,
    "font_size": 14,
    "blinking": "off"
  }
}
